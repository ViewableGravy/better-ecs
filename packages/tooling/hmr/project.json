{
  "name": "hmr",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tooling/hmr/src",
  "projectType": "library",
  "tags": ["type:hmr"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun x tsc -p tsconfig.lib.json",
        "cwd": "packages/tooling/hmr"
      },
      "inputs": ["default", "^default"],
      "outputs": ["{projectRoot}/dist"]
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist tsconfig.lib.tsbuildinfo",
        "cwd": "packages/tooling/hmr"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun x tsc --noEmit",
        "cwd": "packages/tooling/hmr"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun x tsc --noEmit",
        "cwd": "packages/tooling/hmr"
      }
    }
  }
}
