{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["DOM", "ES2022"],
    "skipLibCheck": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "typeRoots": ["../../node_modules/@types"],
    "paths": {
      "@repo/utils": ["../../packages/utils/src/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../utils/tsconfig.lib.json"
    }
  ]
}
