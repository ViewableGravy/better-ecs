{
  "name": "@repo/engine",
  "version": "0.0.0",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./core": {
      "types": "./src/core/index.ts",
      "default": "./src/core/index.ts"
    },
    "./components": {
      "types": "./src/components/index.ts",
      "default": "./src/components/index.ts"
    },
    "./render": {
      "types": "./src/render/index.ts",
      "default": "./src/render/index.ts"
    },
    "./asset": {
      "types": "./src/asset/index.ts",
      "default": "./src/asset/index.ts"
    },
    "./texture": {
      "types": "./src/texture/index.ts",
      "default": "./src/texture/index.ts"
    },
    "./ui": {
      "types": "./src/ui/index.tsx",
      "default": "./src/ui/index.tsx"
    }
  },
  "scripts": {
    "build": "npx tsc -p tsconfig.lib.json",
    "clean": "rm -rf dist tsconfig.lib.tsbuildinfo",
    "lint": "bun x eslint .",
    "typecheck": "npx tsc --noEmit",
    "test": "vitest --run --typecheck"
  },
  "dependencies": {
    "@repo/utils": "workspace:*",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tiny-invariant": "^1.3.3",
    "type-fest": "^4.9.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@standard-schema/spec": "^1.1.0",
    "typescript": "^5.9.3"
  }
}
