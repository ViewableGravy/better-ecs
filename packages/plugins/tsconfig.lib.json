{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["DOM", "ESNext"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "@repo/engine": ["../../packages/engine/src/index.ts"],
      "@repo/engine/*": ["../../packages/engine/src/*/index.ts"],
      "@repo/utils": ["../../packages/utils/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.spec.ts"],
  "references": [
    {
      "path": "../engine/tsconfig.lib.json"
    }
  ]
}
