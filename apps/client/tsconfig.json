{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "composite": false,
    "strict": true,
    "paths": {
      "@repo/engine": ["../../packages/engine/src/index.ts"],
      "@repo/engine/*": ["../../packages/engine/src/*/index.ts"],
      "@repo/fps": ["../../packages/features/fps/src/index.ts"],
      "@repo/physics": ["../../packages/foundation/physics/src/index.ts"],
      "@repo/spatial-contexts": ["../../packages/foundation/spatial-contexts/src/index.ts"],
      "@repo/spatial-contexts/*": ["../../packages/foundation/spatial-contexts/src/*"],
      "@repo/utils": ["../../packages/utils/src/index.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../../packages/tooling/hmr"
    },
    {
      "path": "../../packages/foundation/physics"
    },
    {
      "path": "../../packages/foundation/spatial-contexts"
    },
    {
      "path": "../../packages/features/fps"
    },
    {
      "path": "../../packages/engine"
    }
  ]
}
