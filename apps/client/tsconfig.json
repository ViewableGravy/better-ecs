{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "composite": false,
    "strict": true,
    "paths": {
      "@plugins/*": ["../../packages/plugins/src/*"],
      "@repo/engine": ["../../packages/engine/src/index.ts"],
      "@repo/engine/*": ["../../packages/engine/src/*/index.ts"],
      "@repo/plugins": ["../../packages/plugins/src/index.ts"],
      "@repo/utils": ["../../packages/utils/src/index.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../../packages/hmr"
    },
    {
      "path": "../../packages/plugins"
    },
    {
      "path": "../../packages/engine"
    }
  ]
}
